@online{he2026unifiedcriteriacrystallizationhardcore,
      title={{Unified criteria for crystallization in hard-core lattice systems with applications to polyomino fluids and chiral mixtures}}, 
      author={Qidong He},
      year={2026},
      eprint={2602.05294},
      archivePrefix={arXiv},
      primaryClass={math-ph},
	preview = {crystal_5.tikz.png},
	arxiv = {2602.05294},
	annotation = {I generalize the previous criteria for high-density crystallization in hard-core lattice systems to allow for (a) a general measure of local order and (b) multiple translationally inequivalent particle shapes. As a direct consequence, every polyomino admitting a finite number of tilings (with rotations and possibly mirror images) crystallizes at high densities.}
}

